<%
  ips = link('rabbitmq-server').instances.map(&:address)
  ports = link('rabbitmq-server').p('rabbitmq-server.ports').to_s.
    split(/[\[\], ]/).
    map { |port| port.to_i }.
    select { |port| port > 0 && port < 65536 }
%>
global
	daemon
	user vcap
	group vcap
	maxconn 64000
        spread-checks 4
        log 127.0.0.1 local2 info
  stats socket /var/vcap/sys/run/rabbitmq-haproxy/haproxy.sock mode 600 level admin user vcap
  stats timeout 2m #Wait up to 2 minutes for input

defaults
	option  tcplog
        log     global
        timeout connect 10s
        timeout client  2d
        timeout server  2d

<% ports.each do |port| %>
frontend input-<%= port %>
	bind :<%= port %>
	default_backend output-<%= port %>

backend output-<%= port %>
        mode tcp
        balance leastconn
<% ips.each_with_index do |ip, idx| %>
	server node<%= idx %> <%= ip %>:<%= port %> check inter 5000
<% end %>
<% end %>

listen stats
    bind 0.0.0.0:80
    mode http
    balance
    timeout client 5000
    timeout connect 4000
    timeout server 30000

    #This is the virtual URL to access the stats page
    stats uri /

    #Authentication realm. This can be set to anything. Escape space characters with a backslash.
    stats realm HAProxy\ Statistics

    #The user/pass you want to use.
    stats auth <%= p('rabbitmq-haproxy.stats.username') %>:<%= p('rabbitmq-haproxy.stats.password') %>

    #This allows you to take down and bring up back end servers.
    #This will produce an error on older versions of HAProxy.
    stats admin if TRUE
